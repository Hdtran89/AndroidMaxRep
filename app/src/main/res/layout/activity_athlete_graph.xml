<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackgroundDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.AthleteGraphActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linear1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/workout_name_text"
                android:layout_gravity="start"
                android:layout_weight=".5"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:maxLines="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/workout_unit_text"
                android:layout_weight=".5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linear2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/workout_sub_text"
                android:layout_gravity="start"
                android:maxLines="1"
                android:textColor="@color/subTextColor"
                android:textSize="14sp"
                android:textAlignment="viewStart"
                android:layout_weight=".5"
                android:text="@string/one_rep_max_record"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight=".5"
                android:textSize="14sp"
                android:textColor="@color/subTextColor"
                android:textAlignment="viewEnd"
                android:id="@+id/workout_sub_unit_text"
                android:text="@string/weight_pounds_unit"
                android:maxLines="1"/>
    </LinearLayout>
    <com.anychart.AnyChartView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/any_chart_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            app:layout_constraintBottom_toBottomOf="parent">
    </com.anychart.AnyChartView>
</android.support.constraint.ConstraintLayout>